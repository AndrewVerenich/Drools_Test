<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:drools="http://drools.org/schema/drools-spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://drools.org/schema/drools-spring http://drools.org/schema/drools-spring.xsd">


    <drools:kbase id="employeeBase">
        <drools:resources>
            <!--<drools:resource type="DRL" source="classpath:rules/Employee.drl" />-->
            <drools:resource type="DTABLE" source="classpath:rules/Employee.xls" />
        </drools:resources>
    </drools:kbase>

    <drools:ksession id="employeeSession" name="employeeSession"
                     type="stateless" kbase="employeeBase" />


</beans>


